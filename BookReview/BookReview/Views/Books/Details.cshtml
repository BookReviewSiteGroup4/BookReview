@*@model BookReview.ViewModels.BookViewModel*@
@model IEnumerable<BookReview.ViewModels.BookViewModel>

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    @foreach (var item in Model)
    {

        <dl class="row">
            <dt class="col-sm-2">
                Title: 
            </dt>
            <dd class="col-sm-10">
                @item.Book.Title
            </dd>
            <dt class="col-sm-2">
                ISBN: 
            </dt>
            <dd class="col-sm-10">
                @item.Book.ISBN
            </dd>
            <dt class="col-sm-2">
                Author: 
            </dt>
            <dd class="col-sm-10">
                @item.Book.Author.FullName
            </dd>
            @if (item.Review != null)
            {
                <dt class="col-sm-2">

                    Review: 
                </dt>
                <dd class="col-sm-10">
                    @item.Review.Description
                </dd>
            }
        </dl>
                
            }

</div>
