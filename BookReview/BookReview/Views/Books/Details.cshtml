@model BookReview.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


    <h1 class="display-4">  @Model.Book.Title </h1>
    <p class="lead">
        Description:   @Model.Book.Description <br />
        Rating:  @Model.Book.AverageRating <br />
        ISBN:  @Model.Book.ISBN  <br />
        Author:  @Model.Author.FullName <br />
    </p>
    <h5> Reviews:</h5>
        <hr class="my-4">
        <div class="list-group">

            @foreach (var review in Model.Reviews)
            {

                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1" style="margin-right: 1rem;" > @review.Title </h5>
                    <p class="mb-1">  @review.Description</p>
                    <small> Rating:  @review.ReviewScore</small>
                </div>
                <hr class="my-4">


            }
        </div>

